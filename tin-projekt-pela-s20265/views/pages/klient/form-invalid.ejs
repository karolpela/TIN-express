<%- include('../../fragments/header.ejs') %>
    <main>
        <h2>Nowy klient</h2>
        <form class="form">
            <label for="firstName">Imię: <span class="symbol-required">*</span></label>
            <input type="text" name="firstName" id="firstName" class="error-input" required>
            <span id="errorFirstName" class="errors-text">Imię jest wymagane</span>
            <label for="lastName">Nazwisko: <span class="symbol-required">*</span></label>
            <input type="text" name="lastName" id="lastName" class="error-input" required>
            <span id="errorLastName" class="errors-text">Nazwisko jest wymagane</span>
            <label for="phoneNo">Nr telefonu: <span class="symbol-required">*</span></label>
            <input type="text" name="phoneNo" id="phoneNo" class="error-input" required>
            <span id="errorPhoneNo" class="errors-text">Numer telefonu jest wymagany</span>
            <div class="form-buttons">
                <p id="errorsSummary" class="errors-text">Formularz zawiera błędy</p>
                <input type="submit" value="Dodaj" class="form-button-submit">
                <a href="/klienci" class="form-button-cancel">Anuluj</a>
            </div>
        </form>
    </main>
    <%- include('../../fragments/footer.ejs') %>